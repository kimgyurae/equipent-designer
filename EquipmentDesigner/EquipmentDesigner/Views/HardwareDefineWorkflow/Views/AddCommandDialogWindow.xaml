<Window x:Class="EquipmentDesigner.Views.HardwareDefineWorkflow.AddCommandDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:controls="clr-namespace:EquipmentDesigner.Controls"
        xmlns:constants="clr-namespace:EquipmentDesigner.Constants"
        lex:LocalizeDictionary.DesignCulture="ko"
        lex:ResxLocalizationProvider.DefaultAssembly="EquipmentDesigner"
        lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
        mc:Ignorable="d"
        Title="{lex:Loc Key=Command_AddCommand}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="600" Height="580">

    <Window.Resources>
        <x:Array x:Key="ParameterDataTypes" Type="{x:Type system:String}" 
                 xmlns:system="clr-namespace:System;assembly=mscorlib">
            <!-- C# Primitive Types -->
            <system:String>bool</system:String>
            <system:String>byte</system:String>
            <system:String>sbyte</system:String>
            <system:String>char</system:String>
            <system:String>short</system:String>
            <system:String>ushort</system:String>
            <system:String>int</system:String>
            <system:String>uint</system:String>
            <system:String>long</system:String>
            <system:String>ulong</system:String>
            <system:String>float</system:String>
            <system:String>double</system:String>
            <system:String>decimal</system:String>
            <system:String>string</system:String>
            <!-- Common .NET Types -->
            <system:String>DateTime</system:String>
            <system:String>TimeSpan</system:String>
            <system:String>Guid</system:String>
            <!-- Bit-level Types (Digital IO) -->
            <system:String>bit</system:String>
            <system:String>BOOL</system:String>
            <system:String>BYTE</system:String>
            <system:String>WORD</system:String>
            <system:String>DWORD</system:String>
            <system:String>LWORD</system:String>
            <!-- Integer Types (PLC/Industrial) -->
            <system:String>SINT</system:String>
            <system:String>USINT</system:String>
            <system:String>INT</system:String>
            <system:String>UINT</system:String>
            <system:String>DINT</system:String>
            <system:String>UDINT</system:String>
            <system:String>LINT</system:String>
            <system:String>ULINT</system:String>
            <!-- Floating Point Types (PLC/Industrial) -->
            <system:String>REAL</system:String>
            <system:String>LREAL</system:String>
            <!-- String Types (PLC/Industrial) -->
            <system:String>STRING</system:String>
            <system:String>WSTRING</system:String>
            <!-- Time Types (PLC/Industrial) -->
            <system:String>TIME</system:String>
            <system:String>DATE</system:String>
            <system:String>TIME_OF_DAY</system:String>
            <system:String>DATE_AND_TIME</system:String>
            <system:String>TOD</system:String>
            <system:String>DT</system:String>
            <!-- Array Types -->
            <system:String>byte[]</system:String>
            <system:String>int[]</system:String>
            <system:String>float[]</system:String>
            <system:String>double[]</system:String>
            <system:String>bool[]</system:String>
            <system:String>string[]</system:String>
            <!-- Analog IO Common Types -->
            <system:String>Analog</system:String>
            <system:String>AnalogInput</system:String>
            <system:String>AnalogOutput</system:String>
            <!-- Digital IO Common Types -->
            <system:String>Digital</system:String>
            <system:String>DigitalInput</system:String>
            <system:String>DigitalOutput</system:String>
            <!-- Communication Protocol Types -->
            <system:String>ModbusRegister</system:String>
            <system:String>ModbusCoil</system:String>
            <system:String>OpcTag</system:String>
            <system:String>EtherCATData</system:String>
            <system:String>ProfinetData</system:String>
            <!-- Position/Motion Types -->
            <system:String>Position</system:String>
            <system:String>Velocity</system:String>
            <system:String>Acceleration</system:String>
            <system:String>Torque</system:String>
            <!-- Status Types -->
            <system:String>Status</system:String>
            <system:String>AlarmCode</system:String>
            <system:String>ErrorCode</system:String>
            <!-- Custom/Generic Types -->
            <system:String>Object</system:String>
            <system:String>Enum</system:String>
            <system:String>Struct</system:String>
        </x:Array>
    </Window.Resources>

    <Border Background="{StaticResource Brush.Surface.Primary}"
            BorderBrush="{StaticResource Brush.Border.Primary}"
            BorderThickness="1"
            CornerRadius="{StaticResource Radius.XL}"
            Padding="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Close Button -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title Section -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{lex:Loc Key=Command_AddCommand}"
                               Style="{StaticResource Typography.H4}"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="{lex:Loc Key=Command_AddCommandDescription}"
                               Style="{StaticResource Typography.Body}"
                               Foreground="{StaticResource Brush.Text.Secondary}"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Command="{Binding CancelCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Padding="4"
                        Opacity="0.7"
                        VerticalAlignment="Top">
                    <Path Data="M6 18L18 6M6 6l12 12"
                          Stroke="{StaticResource Brush.Text.Primary}"
                          StrokeThickness="2"
                          Width="16" Height="16"
                          Stretch="Uniform"/>
                </Button>
            </Grid>

            <!-- Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,16">
                <StackPanel>
                    <!-- Command Name -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=Command_CommandName}"
                                   Style="{StaticResource Typography.Label}"
                                   Foreground="{StaticResource Brush.Text.Primary}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CommandName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="{StaticResource Size.Input.Height.MD}"
                                 Padding="{StaticResource Spacing.Padding.Input}"
                                 Background="{StaticResource Brush.Background.Tertiary}"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=Command_Description}"
                                   Style="{StaticResource Typography.Label}"
                                   Foreground="{StaticResource Brush.Text.Primary}"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 Padding="{StaticResource Spacing.Padding.Input}"
                                 Background="{StaticResource Brush.Background.Tertiary}"
                                 BorderThickness="0"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalContentAlignment="Top">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <!-- Parameters Section -->
                    <StackPanel Margin="0,8,0,0">
                        <!-- Parameters Header -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{lex:Loc Key=Command_Parameters}"
                                       Style="{StaticResource Typography.Label}"
                                       Foreground="{StaticResource Brush.Text.Primary}"/>

                            <!-- Add Parameter Button -->
                            <Button Grid.Column="1"
                                    Command="{Binding AddParameterCommand}"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource Brush.Border.Primary}"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    Padding="12,6">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M12 5v14M5 12h14"
                                          Stroke="{StaticResource Brush.Text.Primary}"
                                          StrokeThickness="2"
                                          Width="12" Height="12"
                                          Stretch="Uniform"
                                          Margin="0,0,6,0"/>
                                    <TextBlock Text="{lex:Loc Key=Command_AddParameter}"
                                               Style="{StaticResource Typography.Caption}"
                                               Foreground="{StaticResource Brush.Text.Primary}"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- No Parameters Message -->
                        <Border Visibility="{Binding HasNoParameters, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="{StaticResource Brush.Background.Secondary}"
                                CornerRadius="{StaticResource Radius.LG}"
                                Padding="16"
                                Margin="0,0,0,8">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{lex:Loc Key=Command_NoParameters}"
                                           Style="{StaticResource Typography.Body}"
                                           Foreground="{StaticResource Brush.Text.Secondary}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{lex:Loc Key=Command_NoParametersHint}"
                                           Style="{StaticResource Typography.Caption}"
                                           Foreground="{StaticResource Brush.Text.Tertiary}"
                                           HorizontalAlignment="Center"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Parameters List -->
                        <ItemsControl ItemsSource="{Binding Parameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource Brush.Background.Secondary}"
                                            CornerRadius="{StaticResource Radius.LG}"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Parameter Name -->
                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <TextBlock Text="{lex:Loc Key=Command_ParameterName}"
                                                           Style="{StaticResource Typography.Caption}"
                                                           Foreground="{StaticResource Brush.Text.Secondary}"
                                                           Margin="0,0,0,4"/>
                                                <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Height="{StaticResource Size.Input.Height.SM}"
                                                         Padding="8,4"
                                                         Background="{StaticResource Brush.Background.Tertiary}"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center">
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                            </StackPanel>

                                            <!-- Parameter Type -->
                                            <StackPanel Grid.Column="1" Margin="0,0,8,0">
                                                <TextBlock Text="{lex:Loc Key=Command_ParameterType}"
                                                           Style="{StaticResource Typography.Caption}"
                                                           Foreground="{StaticResource Brush.Text.Secondary}"
                                                           Margin="0,0,0,4"/>
                                                <controls:AutoCompleteTextBox 
                                                    Text="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Suggestions="{StaticResource ParameterDataTypes}"
                                                    InputHeight="{StaticResource Size.Input.Height.SM}"
                                                    InputPadding="8,4"
                                                    InputBackground="{StaticResource Brush.Background.Tertiary}"
                                                    CornerRadius="{StaticResource Radius.MD}"/>
                                            </StackPanel>

                                            <!-- Parameter Description -->
                                            <StackPanel Grid.Column="2" Margin="0,0,8,0">
                                                <TextBlock Text="{lex:Loc Key=Command_ParameterDescription}"
                                                           Style="{StaticResource Typography.Caption}"
                                                           Foreground="{StaticResource Brush.Text.Secondary}"
                                                           Margin="0,0,0,4"/>
                                                <TextBox Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Height="{StaticResource Size.Input.Height.SM}"
                                                         Padding="8,4"
                                                         Background="{StaticResource Brush.Background.Tertiary}"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center">
                                                    <TextBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="{StaticResource Radius.MD}"/>
                                                        </Style>
                                                    </TextBox.Resources>
                                                </TextBox>
                                            </StackPanel>

                                            <!-- Remove Button -->
                                            <Button Grid.Column="3"
                                                    Command="{Binding DataContext.RemoveParameterCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Padding="4"
                                                    Opacity="0.6"
                                                    VerticalAlignment="Bottom"
                                                    Margin="0,0,0,4">
                                                <Path Data="M6 18L18 6M6 6l12 12"
                                                      Stroke="{StaticResource Brush.Text.Secondary}"
                                                      StrokeThickness="2"
                                                      Width="12" Height="12"
                                                      Stretch="Uniform"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,16,0,0">
                <!-- Cancel Button -->
                <Button Command="{Binding CancelCommand}"
                        Padding="16,8"
                        Height="{StaticResource Size.Button.Height.MD}"
                        Background="{StaticResource Brush.Surface.Primary}"
                        BorderBrush="{StaticResource Brush.Border.Primary}"
                        BorderThickness="1"
                        Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="{lex:Loc Key=Common_Cancel}"
                               Style="{StaticResource Typography.Button}"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                </Button>

                <!-- Add Command Button -->
                <Button Command="{Binding AddCommandCommand}"
                        Padding="16,8"
                        Height="{StaticResource Size.Button.Height.MD}"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Brush.Button.Primary.Background}"/>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="{StaticResource Brush.Button.Disabled.Background}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="{lex:Loc Key=Command_AddCommand}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource Typography.Button}">
                                <Setter Property="Foreground" Value="{StaticResource Brush.Text.Inverse}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="False">
                                        <Setter Property="Foreground" Value="{StaticResource Brush.Button.Disabled.Foreground}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>