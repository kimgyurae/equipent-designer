<UserControl x:Class="EquipmentDesigner.Views.HardwareDefineWorkflow.HardwareTreeItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:EquipmentDesigner.Views.HardwareDefineWorkflow"
             xmlns:models="clr-namespace:EquipmentDesigner.Models"
             xmlns:converters="clr-namespace:EquipmentDesigner.Converters"
             xmlns:reusable="clr-namespace:EquipmentDesigner.Views.ReusableComponents"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             lex:LocalizeDictionary.DesignCulture="ko"
             lex:ResxLocalizationProvider.DefaultAssembly="EquipmentDesigner"
             lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
             x:Name="TreeItemRoot"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="280">

    <UserControl.Resources>
        <!-- Chevron Path Data -->
        <PathGeometry x:Key="ChevronDownPath" Figures="M6 9l6 6 6-6"/>
        <PathGeometry x:Key="ChevronRightPath" Figures="M9 18l6-6-6-6"/>
        <converters:HardwareLayerToBackgroundConverter x:Key="HardwareLayerToBackgroundConverter"/>
        <converters:HardwareLayerToForegroundConverter x:Key="HardwareLayerToForegroundConverter"/>
    </UserControl.Resources>

    <StackPanel>
        <!-- Current Node Item -->
        <Border x:Name="NodeBorder"
                Margin="0,2"
                Padding="8,8"
                CornerRadius="{StaticResource Radius.XL}"
                Cursor="Hand">
            <!-- Context Menu -->
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{lex:Loc Key=ContextMenu_Copy}"
                              Command="{Binding PlacementTarget.DataContext.DataContext.CopyNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <Path Data="M8 4v12a2 2 0 0 0 2 2h12V8a2 2 0 0 0-2-2H8zM4 8a2 2 0 0 1 2-2V4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h2a2 2 0 0 1-2-2V8z"
                                  Fill="{StaticResource Brush.Text.Primary}"
                                  Width="14" Height="14"
                                  Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="{lex:Loc Key=ContextMenu_Delete}"
                              Command="{Binding PlacementTarget.DataContext.DataContext.DeleteNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                              Foreground="{StaticResource Brush.Status.Danger}">
                        <MenuItem.Icon>
                            <Path Data="M3 6h18M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2m3 0v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6h14"
                                  Fill="{StaticResource Brush.Status.Danger}"
                                  Width="14" Height="14"
                                  Stretch="Uniform"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </Border.ContextMenu>
            <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick"
                              Command="{Binding DataContext.SelectTreeNodeCommand, RelativeSource={RelativeSource AncestorType=local:HardwareDefineWorkflowView}}"
                              CommandParameter="{Binding}"/>
            </Border.InputBindings>
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.Status.Active.Background}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Expand/Collapse Chevron -->
                <ToggleButton Grid.Column="0"
                              Width="20" Height="20"
                              IsChecked="{Binding IsExpanded, Mode=TwoWay}"
                              Background="Transparent"
                              BorderThickness="0"
                              Cursor="Hand"
                              VerticalAlignment="Center">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CanHaveChildren}" Value="False">
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="2">
                                <Path x:Name="ChevronPath"
                                      Stroke="{StaticResource Brush.Text.Secondary}"
                                      StrokeThickness="2"
                                      Width="12" Height="12"
                                      Stretch="Uniform"
                                      Data="{StaticResource ChevronRightPath}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="ChevronPath" Property="Data" Value="{StaticResource ChevronDownPath}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ChevronPath" Property="Stroke" Value="{StaticResource Brush.Text.Primary}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <!-- Hardware Layer Type Chip -->
                <reusable:StateChip Grid.Column="1"
                                    Text="{Binding HardwareLayer}"
                                    ChipBackground="{Binding HardwareLayer, Converter={StaticResource HardwareLayerToBackgroundConverter}}"
                                    ChipForeground="{Binding HardwareLayer, Converter={StaticResource HardwareLayerToForegroundConverter}}"
                                    VerticalAlignment="Center"
                                    Margin="4,0,0,0"/>

                <!-- Display Name -->
                <TextBlock Grid.Column="2"
                           Text="{Binding DisplayName}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0"
                           Foreground="{StaticResource Brush.Text.Primary}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource Typography.Body}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                    <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Medium}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Field Progress -->
                <TextBlock Grid.Column="3"
                           Text="{Binding FieldProgressText}"
                           VerticalAlignment="Center"
                           Margin="8,0,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource Typography.Body.Small}">
                            <Setter Property="Foreground" Value="{StaticResource Brush.Status.Danger}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource Brush.Status.Success}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Children Container (with indentation) -->
        <StackPanel x:Name="ChildrenContainer"
                    Margin="24,0,0,0">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CanHaveChildren}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <!-- Children Items (Recursive) -->
            <ItemsControl ItemsSource="{Binding Children}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:HardwareTreeItemControl DataContext="{Binding}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Add New Button -->
            <Border Margin="0,2"
                    Padding="8,8"
                    CornerRadius="{StaticResource Radius.XL}"
                    Cursor="Hand"
                    Background="Transparent">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick"
                                  Command="{Binding DataContext.AddChildCommand, RelativeSource={RelativeSource AncestorType=local:HardwareDefineWorkflowView}}"
                                  CommandParameter="{Binding}"/>
                </Border.InputBindings>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Brush.Button.Ghost.Background.Hover}"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding CanAddChild}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <StackPanel Orientation="Horizontal">
                    <!-- Plus Icon -->
                    <Path Data="M12 5v14M5 12h14"
                          Stroke="{StaticResource Brush.Status.Success}"
                          StrokeThickness="2"
                          Width="12" Height="12"
                          Stretch="Uniform"
                          VerticalAlignment="Center"
                          Margin="32,0,0,0"/>

                    <!-- Add New Text -->
                    <TextBlock Text="{Binding AddChildButtonText, StringFormat=' {0}'}"
                               Style="{StaticResource Typography.Body.Small}"
                               Foreground="{StaticResource Brush.Status.Success}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</UserControl>