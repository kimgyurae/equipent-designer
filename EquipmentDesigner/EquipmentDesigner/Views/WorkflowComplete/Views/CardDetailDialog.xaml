<Window x:Class="EquipmentDesigner.Views.CardDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EquipmentDesigner.ViewModels"
        xmlns:controls="clr-namespace:EquipmentDesigner.Controls"
        xmlns:converters="clr-namespace:EquipmentDesigner.Converters"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="ko"
        lex:ResxLocalizationProvider.DefaultAssembly="EquipmentDesigner"
        lex:ResxLocalizationProvider.DefaultDictionary="Resources.Strings"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:CardDetailDialogViewModel}"
        Title="Detail"
        Height="600" Width="680"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:HardwareTypeToBackgroundConverter x:Key="HardwareTypeToBackgroundConverter"/>
        <converters:HardwareTypeToForegroundConverter x:Key="HardwareTypeToForegroundConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Read-only Field Style -->
        <Style x:Key="ReadOnlyFieldStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource Brush.Surface.Secondary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border.Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource Radius.LG}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="MinHeight" Value="44"/>
        </Style>

        <!-- Field Label Style -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource Typography.Body}">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Secondary}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Field Value Style -->
        <Style x:Key="FieldValueStyle" TargetType="TextBlock" BasedOn="{StaticResource Typography.Body.Large}">
            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Primary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Bullet Point Style -->
        <Style x:Key="BulletStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Fill" Value="{StaticResource Brush.Status.Info}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <!-- Main Container with Shadow -->
    <Border Background="{StaticResource Brush.Surface.Primary}"
            CornerRadius="{StaticResource Radius.LG}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.15" Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource Brush.Status.Info.Background}"
                    CornerRadius="8,8,0,0"
                    BorderBrush="{StaticResource Brush.Status.Info}"
                    BorderThickness="0,0,0,2"
                    Padding="24,24,24,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hardware Layer Chip + Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <controls:StateChip Text="{Binding HardwareTypeDisplayText}"
                                            ChipBackground="{Binding HardwareType, Converter={StaticResource HardwareTypeToBackgroundConverter}}"
                                            ChipForeground="{Binding HardwareType, Converter={StaticResource HardwareTypeToForegroundConverter}}"
                                            VerticalAlignment="Center"/>

                        <TextBlock Text="{Binding DialogTitle}"
                                   Style="{StaticResource Typography.H3}"
                                   Foreground="{StaticResource Brush.Text.Primary}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Command="{Binding CloseCommand}"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Top">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="{StaticResource Radius.LG}"
                                        Padding="4">
                                    <Path Data="M18 6L6 18M6 6L18 18"
                                          Stroke="{StaticResource Brush.Text.Secondary}"
                                          StrokeThickness="2"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"
                                          Width="12" Height="12"
                                          Stretch="Uniform"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource Brush.Background.Tertiary}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Scrollable Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="24,24,24,0">
                <StackPanel>
                    <!-- Equipment Type (Equipment only) -->
                    <StackPanel Visibility="{Binding HasEquipmentType, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_EquipmentType}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Text="{Binding EquipmentType}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Display Name -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_DisplayName}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Text="{Binding DisplayName}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Subname -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_Subname}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Text="{Binding Subname}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_Description}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}" MinHeight="70">
                            <TextBlock Text="{Binding Description}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Customer (Equipment only) -->
                    <StackPanel Visibility="{Binding HasCustomer, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_Customer}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Text="{Binding Customer}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Process (Equipment) / ProcessInfo (System/Unit) -->
                    <StackPanel Visibility="{Binding HasProcess, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_Process}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Style="{StaticResource FieldValueStyle}">
                                <TextBlock.Text>
                                    <PriorityBinding>
                                        <Binding Path="Process" />
                                        <Binding Path="ProcessInfo" />
                                    </PriorityBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <!-- Device Type (Device only) -->
                    <StackPanel Visibility="{Binding HasDeviceType, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_DeviceType}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}">
                            <TextBlock Text="{Binding DeviceType}" Style="{StaticResource FieldValueStyle}"/>
                        </Border>
                    </StackPanel>

                    <!-- Attached Documents (Equipment only) -->
                    <StackPanel Visibility="{Binding HasAttachedDocuments, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_DesignDocuments}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}" Padding="12">
                            <ItemsControl ItemsSource="{Binding AttachedDocuments}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <Ellipse Style="{StaticResource BulletStyle}"/>
                                            <TextBlock Text="{Binding}" Style="{StaticResource FieldValueStyle}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <!-- Commands (System/Unit/Device) -->
                    <StackPanel Visibility="{Binding HasCommands, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_Commands}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}" Padding="12">
                            <ItemsControl ItemsSource="{Binding Commands}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <Ellipse Style="{StaticResource BulletStyle}"/>
                                            <TextBlock Style="{StaticResource FieldValueStyle}">
                                                <Run Text="{Binding Name, Mode=OneWay}" FontWeight="Medium"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding Description, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <!-- IO Info (Device only) -->
                    <StackPanel Visibility="{Binding HasIoInfo, Converter={StaticResource BoolToVisibility}}"
                                Margin="0,0,0,16">
                        <TextBlock Text="{lex:Loc Key=CardDetail_IoInfo}" Style="{StaticResource FieldLabelStyle}"/>
                        <Border Style="{StaticResource ReadOnlyFieldStyle}" Padding="12">
                            <ItemsControl ItemsSource="{Binding IoInfo}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                            <Ellipse Style="{StaticResource BulletStyle}"/>
                                            <TextBlock Style="{StaticResource FieldValueStyle}">
                                                <Run Text="{Binding Name, Mode=OneWay}" FontWeight="Medium"/>
                                                <Run Text=" ("/>
                                                <Run Text="{Binding IoType, Mode=OneWay}"/>
                                                <Run Text=") - "/>
                                                <Run Text="{Binding Address, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>
                    </StackPanel>

                    <!-- Bottom Spacing -->
                    <Border Height="8"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource Brush.Surface.Secondary}"
                    BorderBrush="{StaticResource Brush.Border.Primary}"
                    BorderThickness="0,1,0,0"
                    Padding="16,16,16,16"
                    CornerRadius="0,0,8,8">
                <Button Command="{Binding CloseCommand}"
                        Content="{lex:Loc Key=CardDetail_Close}"
                        HorizontalAlignment="Stretch"
                        Height="44"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource Brush.Button.Secondary.Foreground}"/>
                            <Setter Property="Foreground" Value="{StaticResource Brush.Text.Inverse}"/>
                            <Setter Property="FontSize" Value="{StaticResource Font.Size.MD}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="{StaticResource Radius.LG}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource Brush.Text.Primary}"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource Brush.Background.Inverse}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>
