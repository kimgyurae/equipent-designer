<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ============================================================
         Typography Tokens
         폰트 패밀리, 크기, 두께 정의
         ============================================================ -->

    <!-- =========================
         Font Family
         ========================= -->
    <FontFamily x:Key="Font.Family.Primary">Segoe UI, San Francisco, Helvetica Neue, Arial</FontFamily>
    <FontFamily x:Key="Font.Family.Mono">Cascadia Code, Consolas, Monaco, monospace</FontFamily>

    <!-- =========================
         Font Size
         ========================= -->
    <sys:Double x:Key="Font.Size.XS">10</sys:Double>
    <sys:Double x:Key="Font.Size.SM">12</sys:Double>
    <sys:Double x:Key="Font.Size.Base">14</sys:Double>
    <sys:Double x:Key="Font.Size.MD">16</sys:Double>
    <sys:Double x:Key="Font.Size.LG">18</sys:Double>
    <sys:Double x:Key="Font.Size.XL">20</sys:Double>
    <sys:Double x:Key="Font.Size.2XL">24</sys:Double>
    <sys:Double x:Key="Font.Size.3XL">30</sys:Double>
    <sys:Double x:Key="Font.Size.4XL">36</sys:Double>

    <!-- =========================
         Font Weight
         ========================= -->
    <FontWeight x:Key="Font.Weight.Light">Light</FontWeight>
    <FontWeight x:Key="Font.Weight.Regular">Normal</FontWeight>
    <FontWeight x:Key="Font.Weight.Medium">Medium</FontWeight>
    <FontWeight x:Key="Font.Weight.SemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="Font.Weight.Bold">Bold</FontWeight>

    <!-- =========================
         Line Height (as multiplier)
         ========================= -->
    <sys:Double x:Key="Font.LineHeight.Tight">1.25</sys:Double>
    <sys:Double x:Key="Font.LineHeight.Normal">1.5</sys:Double>
    <sys:Double x:Key="Font.LineHeight.Relaxed">1.75</sys:Double>

    <!-- =========================
         Semantic Typography Styles
         ========================= -->
    
    <!-- Heading Styles -->
    <Style x:Key="Typography.H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.4XL}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Bold}"/>
    </Style>
    
    <Style x:Key="Typography.H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.3XL}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.SemiBold}"/>
    </Style>
    
    <Style x:Key="Typography.H3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.2XL}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.SemiBold}"/>
    </Style>
    
    <Style x:Key="Typography.H4" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.XL}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Medium}"/>
    </Style>

    <!-- Body Styles -->
    <Style x:Key="Typography.Body" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Base}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Regular}"/>
    </Style>
    
    <Style x:Key="Typography.Body.Large" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.MD}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Regular}"/>
    </Style>
    
    <Style x:Key="Typography.Body.Small" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.SM}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Regular}"/>
    </Style>

    <!-- Caption & Label -->
    <Style x:Key="Typography.Caption" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.XS}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Regular}"/>
    </Style>
    
    <Style x:Key="Typography.Label" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.SM}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Medium}"/>
    </Style>

    <!-- Code / Monospace -->
    <Style x:Key="Typography.Code" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Mono}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.SM}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Regular}"/>
    </Style>

    <!-- Button Text -->
    <Style x:Key="Typography.Button" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource Font.Family.Primary}"/>
        <Setter Property="FontSize" Value="{StaticResource Font.Size.Base}"/>
        <Setter Property="FontWeight" Value="{StaticResource Font.Weight.Medium}"/>
    </Style>

</ResourceDictionary>
