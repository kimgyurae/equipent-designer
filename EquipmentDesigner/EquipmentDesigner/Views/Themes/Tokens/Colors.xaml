    <!-- =========================
         Hardware Layer Specific Colors (from Figma)
         ========================= -->
    
    <!-- Equipment Layer (Blue) -->
    <Color x:Key="Color.HardwareLayer.Equipment.Background.Start">#DBEAFE</Color>
    <Color x:Key="Color.HardwareLayer.Equipment.Background.End">#BEDBFF</Color>
