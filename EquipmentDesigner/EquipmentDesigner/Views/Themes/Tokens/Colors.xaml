    <Color x:Key="Color.Secondary.400">#34D399</Color>
    <Color x:Key="Color.Secondary.500">#10B981</Color>
    <Color x:Key="Color.Secondary.600">#059669</Color>
    <Color x:Key="Color.Secondary.700">#047857</Color>
    <Color x:Key="Color.Secondary.800">#065F46</Color>
    <Color x:Key="Color.Secondary.900">#064E3B</Color>

    <!-- Neutral -->
    <Color x:Key="Color.White">#FFFFFF</Color>
    <Color x:Key="Color.Black">#000000</Color>
    <Color x:Key="Color.Transparent">Transparent</Color>

</ResourceDictionary>