<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================
         Semantic Brush Tokens
         Colors.xaml의 기본 색상을 참조하여 의미론적 Brush 정의
         ============================================================ -->

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- =========================
         Background
         ========================= -->
    <SolidColorBrush x:Key="Brush.Background.Primary" Color="{StaticResource Color.Gray.50}"/>
    <SolidColorBrush x:Key="Brush.Background.Secondary" Color="{StaticResource Color.White}"/>
    <SolidColorBrush x:Key="Brush.Background.Tertiary" Color="{StaticResource Color.Gray.100}"/>
    <SolidColorBrush x:Key="Brush.Background.Inverse" Color="{StaticResource Color.Gray.800}"/>
    <SolidColorBrush x:Key="Brush.Background.Disabled" Color="{StaticResource Color.Gray.200}"/>

    <!-- Surface (Cards, Panels, Dialogs) -->
    <SolidColorBrush x:Key="Brush.Surface.Primary" Color="{StaticResource Color.White}"/>
    <SolidColorBrush x:Key="Brush.Surface.Secondary" Color="{StaticResource Color.Gray.50}"/>
    <SolidColorBrush x:Key="Brush.Surface.Elevated" Color="{StaticResource Color.White}"/>

    <!-- =========================
         Text
         ========================= -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Gray.800}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Gray.500}"/>
    <SolidColorBrush x:Key="Brush.Text.Tertiary" Color="{StaticResource Color.Gray.400}"/>
    <SolidColorBrush x:Key="Brush.Text.Disabled" Color="{StaticResource Color.Gray.400}"/>
    <SolidColorBrush x:Key="Brush.Text.Inverse" Color="{StaticResource Color.White}"/>
    <SolidColorBrush x:Key="Brush.Text.Link" Color="{StaticResource Color.Primary.600}"/>
    <SolidColorBrush x:Key="Brush.Text.LinkHover" Color="{StaticResource Color.Primary.700}"/>

    <!-- =========================
         Border
         ========================= -->
    <SolidColorBrush x:Key="Brush.Border.Primary" Color="{StaticResource Color.Gray.200}"/>
    <SolidColorBrush x:Key="Brush.Border.Secondary" Color="{StaticResource Color.Gray.300}"/>
    <SolidColorBrush x:Key="Brush.Border.Focus" Color="{StaticResource Color.Primary.500}"/>
    <SolidColorBrush x:Key="Brush.Border.Disabled" Color="{StaticResource Color.Gray.200}"/>

    <!-- =========================
         Status Indicators
         ========================= -->
    
    <!-- Success -->
    <SolidColorBrush x:Key="Brush.Status.Success" Color="{StaticResource Color.Success.500}"/>
    <SolidColorBrush x:Key="Brush.Status.Success.Background" Color="{StaticResource Color.Success.50}"/>
    <SolidColorBrush x:Key="Brush.Status.Success.Border" Color="{StaticResource Color.Success.200}"/>

    <!-- Warning -->
    <SolidColorBrush x:Key="Brush.Status.Warning" Color="{StaticResource Color.Warning.500}"/>
    <SolidColorBrush x:Key="Brush.Status.Warning.Background" Color="{StaticResource Color.Warning.50}"/>
    <SolidColorBrush x:Key="Brush.Status.Warning.Border" Color="{StaticResource Color.Warning.200}"/>

    <!-- Danger / Error -->
    <SolidColorBrush x:Key="Brush.Status.Danger" Color="{StaticResource Color.Danger.500}"/>
    <SolidColorBrush x:Key="Brush.Status.Danger.Background" Color="{StaticResource Color.Danger.50}"/>
    <SolidColorBrush x:Key="Brush.Status.Danger.Border" Color="{StaticResource Color.Danger.200}"/>

    <!-- Info -->
    <SolidColorBrush x:Key="Brush.Status.Info" Color="{StaticResource Color.Primary.500}"/>
    <SolidColorBrush x:Key="Brush.Status.Info.Background" Color="{StaticResource Color.Primary.50}"/>
    <SolidColorBrush x:Key="Brush.Status.Info.Border" Color="{StaticResource Color.Primary.200}"/>

    <!-- Neutral / Idle -->
    <SolidColorBrush x:Key="Brush.Status.Neutral" Color="{StaticResource Color.Gray.400}"/>
    <SolidColorBrush x:Key="Brush.Status.Neutral.Background" Color="{StaticResource Color.Gray.50}"/>
    <SolidColorBrush x:Key="Brush.Status.Neutral.Border" Color="{StaticResource Color.Gray.200}"/>

    <!-- Active / In Progress -->
    <SolidColorBrush x:Key="Brush.Status.Active" Color="{StaticResource Color.Primary.500}"/>
    <SolidColorBrush x:Key="Brush.Status.Active.Background" Color="{StaticResource Color.Primary.100}"/>
    <SolidColorBrush x:Key="Brush.Status.Active.Border" Color="{StaticResource Color.Primary.300}"/>

    <!-- =========================
         Interactive Elements
         ========================= -->

    <!-- Primary Button -->
    <SolidColorBrush x:Key="Brush.Button.Primary.Background" Color="{StaticResource Color.Primary.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Primary.Background.Hover" Color="{StaticResource Color.Primary.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Primary.Background.Pressed" Color="{StaticResource Color.Primary.800}"/>
    <SolidColorBrush x:Key="Brush.Button.Primary.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Secondary Button -->
    <SolidColorBrush x:Key="Brush.Button.Secondary.Background" Color="{StaticResource Color.Gray.100}"/>
    <SolidColorBrush x:Key="Brush.Button.Secondary.Background.Hover" Color="{StaticResource Color.Gray.200}"/>
    <SolidColorBrush x:Key="Brush.Button.Secondary.Background.Pressed" Color="{StaticResource Color.Gray.300}"/>
    <SolidColorBrush x:Key="Brush.Button.Secondary.Foreground" Color="{StaticResource Color.Gray.700}"/>

    <!-- Success Button -->
    <SolidColorBrush x:Key="Brush.Button.Success.Background" Color="{StaticResource Color.Success.500}"/>
    <SolidColorBrush x:Key="Brush.Button.Success.Background.Hover" Color="{StaticResource Color.Success.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Success.Background.Pressed" Color="{StaticResource Color.Success.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Success.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Warning Button -->
    <SolidColorBrush x:Key="Brush.Button.Warning.Background" Color="{StaticResource Color.Warning.500}"/>
    <SolidColorBrush x:Key="Brush.Button.Warning.Background.Hover" Color="{StaticResource Color.Warning.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Warning.Background.Pressed" Color="{StaticResource Color.Warning.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Warning.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Danger Button -->
    <SolidColorBrush x:Key="Brush.Button.Danger.Background" Color="{StaticResource Color.Danger.500}"/>
    <SolidColorBrush x:Key="Brush.Button.Danger.Background.Hover" Color="{StaticResource Color.Danger.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Danger.Background.Pressed" Color="{StaticResource Color.Danger.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Danger.Foreground" Color="{StaticResource Color.White}"/>
    
    <!-- Danger Light Button (Stop 등) -->
    <SolidColorBrush x:Key="Brush.Button.DangerLight.Background" Color="{StaticResource Color.Danger.400}"/>
    <SolidColorBrush x:Key="Brush.Button.DangerLight.Background.Hover" Color="{StaticResource Color.Danger.500}"/>
    <SolidColorBrush x:Key="Brush.Button.DangerLight.Background.Pressed" Color="{StaticResource Color.Danger.600}"/>
    <SolidColorBrush x:Key="Brush.Button.DangerLight.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Info Button -->
    <SolidColorBrush x:Key="Brush.Button.Info.Background" Color="{StaticResource Color.Info.500}"/>
    <SolidColorBrush x:Key="Brush.Button.Info.Background.Hover" Color="{StaticResource Color.Info.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Info.Background.Pressed" Color="{StaticResource Color.Info.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Info.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Accent Button -->
    <SolidColorBrush x:Key="Brush.Button.Accent.Background" Color="{StaticResource Color.Accent.500}"/>
    <SolidColorBrush x:Key="Brush.Button.Accent.Background.Hover" Color="{StaticResource Color.Accent.600}"/>
    <SolidColorBrush x:Key="Brush.Button.Accent.Background.Pressed" Color="{StaticResource Color.Accent.700}"/>
    <SolidColorBrush x:Key="Brush.Button.Accent.Foreground" Color="{StaticResource Color.White}"/>

    <!-- Disabled Button -->
    <SolidColorBrush x:Key="Brush.Button.Disabled.Background" Color="{StaticResource Color.Gray.200}"/>
    <SolidColorBrush x:Key="Brush.Button.Disabled.Foreground" Color="{StaticResource Color.Gray.400}"/>

    <!-- Ghost Button -->
    <SolidColorBrush x:Key="Brush.Button.Ghost.Background" Color="{StaticResource Color.Transparent}"/>
    <SolidColorBrush x:Key="Brush.Button.Ghost.Background.Hover" Color="{StaticResource Color.Gray.100}"/>
    <SolidColorBrush x:Key="Brush.Button.Ghost.Background.Pressed" Color="{StaticResource Color.Gray.200}"/>
    <SolidColorBrush x:Key="Brush.Button.Ghost.Foreground" Color="{StaticResource Color.Gray.700}"/>

    <!-- =========================
         Icon Colors
         ========================= -->
    <SolidColorBrush x:Key="Brush.Icon.Primary" Color="{StaticResource Color.Primary.600}"/>
    <SolidColorBrush x:Key="Brush.Icon.Secondary" Color="{StaticResource Color.Secondary.500}"/>
    <SolidColorBrush x:Key="Brush.Icon.Warning" Color="{StaticResource Color.Warning.600}"/>
    <SolidColorBrush x:Key="Brush.Icon.Danger" Color="{StaticResource Color.Danger.500}"/>
    <SolidColorBrush x:Key="Brush.Icon.Success" Color="{StaticResource Color.Success.500}"/>
    <SolidColorBrush x:Key="Brush.Icon.Muted" Color="{StaticResource Color.Gray.400}"/>

    <!-- =========================
         Highlight / Selection
         ========================= -->
    <SolidColorBrush x:Key="Brush.Highlight.Background" Color="{StaticResource Color.Primary.300}"/>
    <SolidColorBrush x:Key="Brush.Highlight.Border" Color="{StaticResource Color.Primary.500}"/>
    <SolidColorBrush x:Key="Brush.Selection.Background" Color="{StaticResource Color.Primary.100}"/>
    <SolidColorBrush x:Key="Brush.Selection.Border" Color="{StaticResource Color.Primary.400}"/>

    <!-- =========================
         Input Controls
         ========================= -->
    <SolidColorBrush x:Key="Brush.Input.Background" Color="{StaticResource Color.White}"/>
    <SolidColorBrush x:Key="Brush.Input.Background.Hover" Color="{StaticResource Color.Gray.50}"/>
    <SolidColorBrush x:Key="Brush.Input.Background.Disabled" Color="{StaticResource Color.Gray.100}"/>
    <SolidColorBrush x:Key="Brush.Input.Border" Color="{StaticResource Color.Gray.300}"/>
    <SolidColorBrush x:Key="Brush.Input.Border.Hover" Color="{StaticResource Color.Gray.400}"/>
    <SolidColorBrush x:Key="Brush.Input.Border.Focus" Color="{StaticResource Color.Primary.500}"/>
    <SolidColorBrush x:Key="Brush.Input.Border.Error" Color="{StaticResource Color.Danger.500}"/>
    <SolidColorBrush x:Key="Brush.Input.Placeholder" Color="{StaticResource Color.Gray.400}"/>

    <!-- =========================
         Overlay / Backdrop
         ========================= -->
    <SolidColorBrush x:Key="Brush.Overlay.Backdrop" Color="{StaticResource Color.Gray.900}" Opacity="0.5"/>
    <SolidColorBrush x:Key="Brush.Overlay.Backdrop.Light" Color="{StaticResource Color.Gray.900}" Opacity="0.3"/>
    <SolidColorBrush x:Key="Brush.Overlay.Backdrop.Dark" Color="{StaticResource Color.Gray.900}" Opacity="0.7"/>

    <!-- =========================
         Hardware Layer Card Styles
         ========================= -->
    
    <!-- Equipment Layer (Blue Gradient) -->
    <LinearGradientBrush x:Key="Brush.HardwareType.Equipment.Card.Background" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Color.HardwareType.Equipment.Background.Start}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.HardwareType.Equipment.Background.End}" Offset="1"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="Brush.HardwareType.Equipment.Card.Border" Color="{StaticResource Color.HardwareType.Equipment.Border}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Equipment.Chip.Background" Color="{StaticResource Color.HardwareType.Equipment.Chip.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Equipment.Chip.Foreground" Color="{StaticResource Color.HardwareType.Equipment.Chip.Foreground}"/>
    
    <!-- System Layer (Purple) -->
    <SolidColorBrush x:Key="Brush.HardwareType.System.Card.Background" Color="{StaticResource Color.HardwareType.System.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.System.Card.Border" Color="{StaticResource Color.HardwareType.System.Border}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.System.Chip.Background" Color="{StaticResource Color.HardwareType.System.Chip.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.System.Chip.Foreground" Color="{StaticResource Color.HardwareType.System.Chip.Foreground}"/>
    
    <!-- Unit Layer (Green) -->
    <SolidColorBrush x:Key="Brush.HardwareType.Unit.Card.Background" Color="{StaticResource Color.HardwareType.Unit.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Unit.Card.Border" Color="{StaticResource Color.HardwareType.Unit.Border}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Unit.Chip.Background" Color="{StaticResource Color.HardwareType.Unit.Chip.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Unit.Chip.Foreground" Color="{StaticResource Color.HardwareType.Unit.Chip.Foreground}"/>
    
    <!-- Device Layer (Orange) -->
    <SolidColorBrush x:Key="Brush.HardwareType.Device.Card.Background" Color="{StaticResource Color.HardwareType.Device.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Device.Card.Border" Color="{StaticResource Color.HardwareType.Device.Border}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Device.Chip.Background" Color="{StaticResource Color.HardwareType.Device.Chip.Background}"/>
    <SolidColorBrush x:Key="Brush.HardwareType.Device.Chip.Foreground" Color="{StaticResource Color.HardwareType.Device.Chip.Foreground}"/>

</ResourceDictionary>