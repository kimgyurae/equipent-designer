<UserControl x:Class="EquipmentDesigner.Controls.ToastContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EquipmentDesigner.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             IsHitTestVisible="False">

    <!--
    ToastContainer: Hosts multiple toast messages at the top center of the application.

    Usage:
    1. Place this control in your MainWindow.xaml as the topmost element in a Grid
    2. Use ToastService.Instance.Show() to display toasts from anywhere in the application

    The container is hit-test-invisible by default but individual toasts are interactive.
    -->

    <Grid>
        <!-- Toasts positioned at top center -->
        <ItemsControl x:Name="ToastsItemsControl"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Margin="0,24,0,0"
                      IsHitTestVisible="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ToastMessageViewModel}">
                    <local:ToastMessage x:Name="ToastItem"
                                        DataContext="{Binding}"
                                        IsHitTestVisible="True"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
