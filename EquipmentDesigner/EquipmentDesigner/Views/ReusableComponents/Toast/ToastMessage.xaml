<UserControl x:Class="EquipmentDesigner.Views.ReusableComponents.Toast.ToastMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EquipmentDesigner.Views.ReusableComponents.Toast"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="360"
             x:Name="ToastRoot">

    <UserControl.Resources>
        <!-- Converters for visibility -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border x:Name="ToastBorder"
            MinWidth="320"
            MaxWidth="400"
            Margin="0,0,0,8"
            Padding="16,12"
            CornerRadius="{StaticResource Radius.LG}"
            BorderThickness="{StaticResource Border.Thin}"
            Effect="{StaticResource Shadow.LG}"
            RenderTransformOrigin="0.5,0">

        <Border.RenderTransform>
            <TranslateTransform x:Name="SlideTransform" Y="-50"/>
        </Border.RenderTransform>

        <!-- Default style (Info) - will be overridden by triggers -->
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{StaticResource Brush.Status.Info.Background}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Info.Border}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ToastType}" Value="Success">
                        <Setter Property="Background" Value="{StaticResource Brush.Status.Success.Background}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Success.Border}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ToastType}" Value="Warning">
                        <Setter Property="Background" Value="{StaticResource Brush.Status.Warning.Background}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Warning.Border}"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ToastType}" Value="Error">
                        <Setter Property="Background" Value="{StaticResource Brush.Status.Danger.Background}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Status.Danger.Border}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Viewbox Grid.Column="0"
                     Width="20" Height="20"
                     Margin="0,0,12,0"
                     VerticalAlignment="Center">
                <Path x:Name="IconPath"
                      Stretch="Uniform"
                      StrokeThickness="1.5"
                      StrokeLineJoin="Round"
                      StrokeStartLineCap="Round"
                      StrokeEndLineCap="Round">
                    <Path.Style>
                        <Style TargetType="Path">
                            <Setter Property="Stroke" Value="{StaticResource Brush.Icon.Primary}"/>
                            <Setter Property="Data" Value="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ToastType}" Value="Success">
                                    <Setter Property="Stroke" Value="{StaticResource Brush.Icon.Success}"/>
                                    <Setter Property="Data" Value="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ToastType}" Value="Warning">
                                    <Setter Property="Stroke" Value="{StaticResource Brush.Icon.Warning}"/>
                                    <Setter Property="Data" Value="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ToastType}" Value="Error">
                                    <Setter Property="Stroke" Value="{StaticResource Brush.Icon.Danger}"/>
                                    <Setter Property="Data" Value="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
            </Viewbox>

            <!-- Content (Title & Description) -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                <TextBlock Text="{Binding Title}"
                           Style="{StaticResource Typography.Body}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Brush.Text.Primary}"
                           TextWrapping="Wrap"/>

                <TextBlock Text="{Binding Description}"
                           Style="{StaticResource Typography.Body.Small}"
                           Foreground="{StaticResource Brush.Text.Secondary}"
                           TextWrapping="Wrap"
                           Margin="0,4,0,0"
                           Visibility="{Binding HasDescription, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Column="2"
                    Command="{Binding DismissCommand}"
                    VerticalAlignment="Center"
                    Width="24" Height="24"
                    Padding="0"
                    Cursor="Hand"
                    ToolTip="Dismiss">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="ButtonBorder"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="{StaticResource Radius.MD}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background"
                                                    Value="{StaticResource Brush.Button.Ghost.Background.Hover}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="ButtonBorder" Property="Background"
                                                    Value="{StaticResource Brush.Button.Ghost.Background.Pressed}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
                <Viewbox Width="14" Height="14">
                    <Path Stroke="{StaticResource Brush.Text.Secondary}"
                          StrokeThickness="2"
                          StrokeLineJoin="Round"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Data="M6 18L18 6M6 6l12 12"/>
                </Viewbox>
            </Button>
        </Grid>
    </Border>

    <UserControl.Triggers>
        <!-- Slide-in animation on load -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="SlideTransform"
                                     Storyboard.TargetProperty="Y"
                                     From="-50" To="0"
                                     Duration="{StaticResource Animation.Duration.Normal}">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="ToastBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     Duration="{StaticResource Animation.Duration.Normal}"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
