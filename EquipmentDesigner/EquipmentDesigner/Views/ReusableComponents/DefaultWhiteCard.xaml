<UserControl x:Class="EquipmentDesigner.Controls.DefaultWhiteCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Name="CardRoot"
             d:DesignHeight="200" d:DesignWidth="300">
    
    <UserControl.Resources>
        <DropShadowEffect x:Key="HoverShadow"
                      ShadowDepth="0"
                      BlurRadius="12"
                      Opacity="0.10"
                      Color="Black"/>
    </UserControl.Resources>
    
    <Border x:Name="CardBorder"
            Background="{StaticResource Brush.Surface.Primary}"
            BorderThickness="{StaticResource Border.Thin}"
            CornerRadius="{Binding CardCornerRadius, ElementName=CardRoot}"
            Padding="{Binding CardPadding, ElementName=CardRoot}">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource Brush.Border.Primary}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsClickable, ElementName=CardRoot}" Value="True">
                        <Setter Property="Cursor" Value="Hand"/>
                    </DataTrigger>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsMouseOver, ElementName=CardBorder}" Value="True"/>
                            <Condition Binding="{Binding IsClickable, ElementName=CardRoot}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Background" Value="{StaticResource Brush.Background.Tertiary}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border.Focus}"/>
                        <Setter Property="Effect" Value="{StaticResource HoverShadow}"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick"
                          Command="{Binding Command, ElementName=CardRoot}"
                          CommandParameter="{Binding CommandParameter, ElementName=CardRoot}"/>
        </Border.InputBindings>

        <ContentPresenter Content="{Binding CardContent, ElementName=CardRoot}"/>
    </Border>
</UserControl>