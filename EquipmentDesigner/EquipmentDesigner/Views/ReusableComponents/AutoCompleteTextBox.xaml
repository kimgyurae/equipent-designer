<UserControl x:Class="EquipmentDesigner.Controls.AutoCompleteTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="200"
             x:Name="AutoCompleteControl">

    <Grid>
        <!-- Main TextBox -->
        <TextBox x:Name="InputTextBox"
                 Text="{Binding Text, ElementName=AutoCompleteControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Height="{Binding InputHeight, ElementName=AutoCompleteControl}"
                 Padding="{Binding InputPadding, ElementName=AutoCompleteControl}"
                 Background="{Binding InputBackground, ElementName=AutoCompleteControl}"
                 BorderThickness="0"
                 VerticalContentAlignment="Center"
                 GotFocus="InputTextBox_GotFocus"
                 LostFocus="InputTextBox_LostFocus"
                 PreviewKeyDown="InputTextBox_PreviewKeyDown"
                 TextChanged="InputTextBox_TextChanged">
            <TextBox.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="{Binding CornerRadius, ElementName=AutoCompleteControl}"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- Suggestions Popup -->
        <Popup x:Name="SuggestionsPopup"
               PlacementTarget="{Binding ElementName=InputTextBox}"
               Placement="Bottom"
               AllowsTransparency="True"
               StaysOpen="False"
               PopupAnimation="Slide"
               HorizontalOffset="0"
               VerticalOffset="2">
            <Border Background="{DynamicResource Brush.Surface.Primary}"
                    BorderBrush="{DynamicResource Brush.Border.Primary}"
                    BorderThickness="1"
                    CornerRadius="8"
                    MaxHeight="200"
                    MinWidth="{Binding ActualWidth, ElementName=InputTextBox}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="4">
                    <ListBox x:Name="SuggestionsList"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionChanged="SuggestionsList_SelectionChanged"
                             PreviewMouseLeftButtonUp="SuggestionsList_PreviewMouseLeftButtonUp">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBorder"
                                                    Background="Transparent"
                                                    CornerRadius="4"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource Brush.Background.Tertiary}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource Brush.Selection.Background}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{DynamicResource Brush.Text.Primary}"
                                           FontSize="13"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </Popup>
    </Grid>
</UserControl>