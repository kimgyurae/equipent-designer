<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================================
         Shadow & Effect Tokens
         그림자, 투명도, 애니메이션 정의
         ============================================================ -->

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- =========================
         Drop Shadow Effects
         ========================= -->
    
    <DropShadowEffect x:Key="Shadow.SM" 
        BlurRadius="4" 
        ShadowDepth="1" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.1"/>

    <DropShadowEffect x:Key="Shadow.MD" 
        BlurRadius="8" 
        ShadowDepth="2" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.12"/>

    <DropShadowEffect x:Key="Shadow.LG" 
        BlurRadius="16" 
        ShadowDepth="4" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.15"/>

    <DropShadowEffect x:Key="Shadow.XL" 
        BlurRadius="24" 
        ShadowDepth="8" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.18"/>

    <DropShadowEffect x:Key="Shadow.2XL" 
        BlurRadius="32" 
        ShadowDepth="12" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.2"/>

    <!-- Colored Shadows -->
    <DropShadowEffect x:Key="Shadow.Primary" 
        BlurRadius="12" 
        ShadowDepth="4" 
        Direction="270"
        Color="{StaticResource Color.Primary.500}" 
        Opacity="0.3"/>

    <DropShadowEffect x:Key="Shadow.Success" 
        BlurRadius="12" 
        ShadowDepth="4" 
        Direction="270"
        Color="{StaticResource Color.Success.500}" 
        Opacity="0.3"/>

    <DropShadowEffect x:Key="Shadow.Danger" 
        BlurRadius="12" 
        ShadowDepth="4" 
        Direction="270"
        Color="{StaticResource Color.Danger.500}" 
        Opacity="0.3"/>

    <!-- Inner Shadow (simulated) -->
    <DropShadowEffect x:Key="Shadow.Inner" 
        BlurRadius="4" 
        ShadowDepth="-1" 
        Direction="270"
        Color="{StaticResource Color.Gray.900}" 
        Opacity="0.1"/>

    <!-- =========================
         Focus Ring Effect
         ========================= -->
    <DropShadowEffect x:Key="Effect.FocusRing" 
        BlurRadius="0" 
        ShadowDepth="0" 
        Direction="0"
        Color="{StaticResource Color.Primary.500}" 
        Opacity="0.5"/>

    <!-- =========================
         Opacity Levels
         ========================= -->
    <x:Static x:Key="Opacity.Disabled" Member="sys:Double.Parse" xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
    <!-- Note: Use these values directly -->
    <!-- Opacity.Full = 1.0 -->
    <!-- Opacity.High = 0.9 -->
    <!-- Opacity.Medium = 0.7 -->
    <!-- Opacity.Low = 0.5 -->
    <!-- Opacity.Subtle = 0.3 -->
    <!-- Opacity.Disabled = 0.4 -->
    <!-- Opacity.Overlay = 0.5 -->

    <!-- =========================
         Animation Durations (for Storyboards)
         ========================= -->
    <Duration x:Key="Animation.Duration.Fast">0:0:0.1</Duration>
    <Duration x:Key="Animation.Duration.Normal">0:0:0.2</Duration>
    <Duration x:Key="Animation.Duration.Slow">0:0:0.3</Duration>
    <Duration x:Key="Animation.Duration.Slower">0:0:0.5</Duration>

    <!-- =========================
         Easing Functions
         ========================= -->
    <CubicEase x:Key="Animation.Ease.In" EasingMode="EaseIn"/>
    <CubicEase x:Key="Animation.Ease.Out" EasingMode="EaseOut"/>
    <CubicEase x:Key="Animation.Ease.InOut" EasingMode="EaseInOut"/>
    <BackEase x:Key="Animation.Ease.Back" EasingMode="EaseOut" Amplitude="0.3"/>
    <ElasticEase x:Key="Animation.Ease.Elastic" EasingMode="EaseOut" Oscillations="1" Springiness="3"/>

</ResourceDictionary>
